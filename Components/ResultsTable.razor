@inject Simulator.Services.TournamentStateService tournamentState



@code {
    [Parameter]
    public List<Team> Teams { get; set; }

    protected override void OnInitialized(){
        tournamentState.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        tournamentState.OnChange -= StateHasChanged;
    }
    
}

@if (Teams != null && Teams.Any() && tournamentState.ShowTable)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Scored</th>
                <th>Conceded</th>
                <th>+/-</th>
                <th>Points</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var team in Teams)
            {
                <tr>
                    <td>@team.Name</td>
                    <td>@team.GoalsScored</td>
                    <td>@team.GoalsConceded</td>
                    <td>@team.GoalDifference</td>
                    <td>@team.Points</td>
                </tr>
            }
        </tbody>
    </table>
}
